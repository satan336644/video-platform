# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/video_platform

# Add to backend/.env
PLAYBACK_TOKEN_SECRET=your-playback-secret-change-this-in-production

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Playback Token Configuration
PLAYBACK_TOKEN_SECRET=your-playback-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
# Maximum upload file size: 500 MB in bytes (500 * 1024 * 1024)
MAX_FILE_SIZE=524288000
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv

# Storage Configuration (S3-compatible)
S3_ENDPOINT=
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# CDN Configuration
CDN_URL=

# Logging
LOG_LEVEL=info

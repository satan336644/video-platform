# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/video_platform

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Playback Token Configuration
PLAYBACK_TOKEN_SECRET=your-playback-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
# Maximum upload file size: 500 MB in bytes (500 * 1024 * 1024)
MAX_FILE_SIZE=524288000
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv

# Storage Configuration
STORAGE_PROVIDER=local

# Cloudflare R2 Configuration (optional, set STORAGE_PROVIDER=r2 to enable)
R2_ACCOUNT_ID=your-account-id-here
R2_ACCESS_KEY_ID=your-access-key-id-here
R2_SECRET_ACCESS_KEY=your-secret-access-key-here
R2_BUCKET_NAME=video-platform-dev
R2_REGION=auto

# CDN Configuration
CDN_URL=
R2_PUBLIC_URL=https://your-r2-public-domain.com

# Logging
LOG_LEVEL=info

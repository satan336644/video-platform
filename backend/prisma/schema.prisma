datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id          String   @id @default(uuid())
  title       String
  description String
  creatorId   String
  createdAt   DateTime @default(now())
}

model UploadSession {
  id        String        @id @default(uuid())
  videoId   String
  creatorId String
  status    UploadStatus  @default(PENDING)
  uploadUrl String
  createdAt DateTime      @default(now())
}

enum UploadStatus {
  PENDING
  UPLOADING
  COMPLETED
  FAILED
}
